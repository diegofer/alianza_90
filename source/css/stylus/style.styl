@import 'nib'

body
    background gray

    #main-content
        position relative

////////////  HEADER  ////////////

header
    margin-top 15px
    position fixed
    top 0
    left 0
    right 0
    z-index 10
    #home-btn
        cursor pointer

////////////  HOME  ////////////

#section-home
    background #777
    position relative
    min-height 400px
    div
        text-align center
    #img-home
        //background red
        position relative
        display block
        top 15%
        text-align center
        img 
            margin 0 auto
    #texto-home
        position relative
        display block
        top 20%
        text-align justify
        padding 0 20% 0 20%
    #info-home
        position absolute
        width 100%
        bottom 0


////////////  SLIDE  ////////////

#section-timeline
    position relative
    text-align center
    background #D6D6D6
    width 100%
    overflow hidden

    ul
        position relative
        list-style none
        margin 0
        padding 0
        height 100%
        overflow hidden
        
        li
            position absolute
            list-style none
            height 100%
            overflow hidden
            border-right solid 1px #fff
            background red

            a 
                display block
                width 100%
                height 100%
                cursor pointer

                .slide-hover
                    background #000
                    position absolute
                    width 100%
                    height 100%
                    z-index 4
                    opacity 0.7
                    transition opacity 400ms linear
                &:hover .slide-hover
                    opacity 0.3
            


////////////  DETALLE  ////////////

#year
    background white

    #year-top
    #year-bottom
        background white

        .content-img
            img
                margin 0 auto 
        
        .content-text
            > div 
                text-align center
                padding 0 10%
      

    #year-slide
        display block
        background green
        position relative
        height auto

        ul#carousel
            background red
            display block
            list-style none
            margin 0
            padding 0

            li
                position relative
                padding 0
                margin 0
                float left
                //border 1px solid #000
                list-style none

                img
                    position relative
                    width 100%
                    height auto
                    display block
                    margin 0 
                    padding 0
                    border none

                span
                    position absolute
                    right 0
                    bottom 0
                    left 1px
                    display block
                    background #000
                    opacity 0.7
                    color #fff
                    padding 2px 5px
        
        &:hover #controles
            opacity 0.6

        #controles
            position absolute
            z-index 9
            width 50px
            height 60px
            top 50%
            left 50%
            margin-left -25px
            margin-top -30px
            background #000 
            opacity 0.1
            transition opacity 400ms linear
                                           
            
            a
                display block
                float left
                width 25px
                height 60px
                line-height 60px
                text-align center
                font-size 30px
                text-decoration none
                cursor pointer
                color #999
                transition color 200ms linear

                &:hover
                    color #fff


 

// resoluciones de pantalla mayores o iguales a 768px         
@media only screen and (min-width: 768px)
    #year
        position relative
        
        #year-top
        #year-bottom
            position relative

            .contenedor
                position relative
                height 100%
                width: 50%
                float left
                vertical-aling top   
            .content-img
                img
                    width 100%
                    height 100%
                    margin 0  
            .content-text
                h1
                    margin 0 
                    font-size 5em
                h2
                    font-size 3em
                h3
                    margin-top 0
                > div 
                    text-align left
                    padding 0
                    position absolute
                    left 10%
                    right 10%
                    top 15%
                    bottom 10%
                    .hacer-scroll
                        position absolute
                        top 40%
                        bottom 0                 


        #year-slide
                
            #controles
                width 60px
                height 80px
                margin-left -30px
                margin-top -40px
                                                     
                a
                    width 30px
                    height 80px
                    line-height 80px
                    font-size 40px
                    
                   
