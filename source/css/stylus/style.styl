@import 'nib'
@import 'utils'


body
    background #123150
    font-family: 'Merriweather', serif;

    #main-content
        position relative

////////////  HEADER  ////////////

header
    position absolute
    text-align center
    padding 15px 15px
    top 0
    left 0
    right 0
    z-index 10
    #logo
        background url(../img/logo-gold.png)
        width 60px
        height 41px
        float left  
        cursor pointer  
    .btn-group
        float right
        margin-bottom 10px
    .btn
        background transparent    
        font-size 8px
        padding 4px 10px
        font-style italic
        border solid 1px #D1B03C
        color #D1B03C
        &:hover
            background #D1B03C
            color #fff
    
    .menu-timeline
        display none
        position relative
        font-family sans-serif
        border-bottom dotted 1px #222
        .box
            position relative
            width 50px
            height 30px
            float left   
            font-size 12px     
            transition font-size 200ms linear
            &:hover
                color #555
            &:hover .punto
                background #555
            .numero
                display block
                height 20px
                line-height 25px
                cursor pointer

            .punto
                position absolute
                background #222
                width 2px
                height 2px
                bottom -2.5px
                left 50%
                margin-left -2px
                border 1px solid #000
                border-radius 3px
                cursor pointer
                transition 200ms linear
                &:hover
                    background #999

        .box.active
            font-size 20px
            .punto
                width 4px
                height 4px
                bottom -3.5px
                margin-left -3px      

// estilos para el header logo y botones cuando estan en vista detalle
.header-year
    background rgba(209,176,60,0.5)
    #logo 
        background url(../img/logo-black.png)
    .btn
        border solid 1px #222
        color #222
        &:hover
            background #222
            color #fff
    .menu-timeline
        display inline-block

@media only screen and (min-width: 768px)
    header
        position fixed                
                

        


////////////  HOME  ////////////

#section-home
    position relative
    background url(../img/back_home800.png)
    text-align center 
    min-height 600px
    #img-home
        margin-left auto
        margin-right auto
        margin-top 50px
    #texto-home
        //background transparent    
        margin-top 50px
        #first
            font-size 16px
            font-style italic
            color #D1B03C
            padding 0 10%
        #last
            font-size 13px
            color #fff
            padding 0 15%

    #info-home
        font-size 10px
        font-style italic
        color #D1B03C
        margin-top 30px

@media only screen and (min-width: 768px)
    #section-home
        
        #img-home
            position relative
            margin-top 20px
            max-width 320px
            width 30%
            height auto
        #texto-home
            position absolute
            bottom 10%
            margin 0

        #info-home
            position absolute
            bottom 0
            width 100%

////////////  SLIDE  ////////////

#section-timeline
    position relative
    text-align center
    background #D6D6D6
    width 100%
    overflow hidden

    ul
        position relative
        list-style none
        margin 0
        padding 0
        height 100%
        overflow hidden
        
        li
            position absolute
            list-style none
            height 100%
            overflow hidden
            //border-right solid 1px #fff
            background gray
            cursor pointer

            a 
                display block
                width 100%
                height 100%
                cursor pointer

            .slide-hover
                background #000
                position absolute
                width 100%
                height 100%
                z-index 4
                opacity 0.7
                transition opacity 400ms linear
            &:hover .slide-hover
                opacity 0.3
            &:hover h5
                opacity 0.9
            img
                position relative
                height 100%
                width 100%
                z-index 1
            
            h5
                position absolute        
                z-index 5
                bottom 50px
                left 5%
                margin 0
                font-style italic
                font-size 28px
                width 60%
                text-align left
                color #fff
                opacity 0.3
                transition opacity 400ms linear

            h4
                position absolute
                padding 0
                margin 0
                z-index 5
                bottom 50px 
                left 95%
                color #D1B03C
                font-size 80px
                height 80px             
                line-height 80px
                transform rotate(-90deg);
                transform-origin: left bottom 0

            

@media only screen and (min-width: 768px)
    #section-timeline
        background red

////////////  DETALLE  ////////////

#year
    background white

    #year-top
    #year-bottom
        background white

        .content-img
            img
                margin 0 auto 
        
        .content-text
            > div 
                text-align center
                padding 0 10%
            h1
                color #D1B03C 
                font-size 3em
            h2
                font-style italic
                font-weight bold
                font-size 30px
                color #191919                
            h3
                color #191919
                font-style italic
                font-size 28px
                font-weight bold      

    #year-slide
        //display block
        //position relative
        //height auto

        ul#carousel
            display block
            list-style none
            margin 0
            padding 0

            li
                display block
                position relative
                padding 0
                margin 0
                float left
                //border 1px solid #000
                list-style none

                img
                    position relative
                    width 100%
                    height auto
                    display block
                    margin 0 
                    padding 0
                    border none

                span
                    position absolute
                    right 0
                    bottom 0
                    left 1px
                    display block
                    background #000
                    opacity 0.7
                    color #fff
                    padding 2px 5px
                    font-size 8px
        
        &:hover #controles
            opacity 0.6

        #controles
            position absolute
            z-index 9
            width 50px
            height 60px
            top 50%
            left 50%
            margin-left -25px
            margin-top -30px
            background #000 
            opacity 0.1
            transition opacity 400ms linear
                                           
            
            a
                display block
                float left
                width 25px
                height 60px
                line-height 60px
                text-align center
                font-size 30px
                text-decoration none
                cursor pointer
                color #999
                transition color 200ms linear

                &:hover
                    color #fff


 

