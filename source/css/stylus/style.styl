@import 'nib'
@import 'utils'


body   
    font-family: 'Merriweather', serif;
    background #123150
    
    #main-content   
        position relative

////////////  HEADER  ////////////

header
    position absolute
    text-align center
    padding 15px 15px
    top 0
    left 0
    right 0
    z-index 10
    #logo
        background url(../img/logo-gold.png)
        width 60px
        height 41px
        float left  
        cursor pointer 
        margin-bottom 10px 
    .btn-group
        float right
        margin-bottom 10px
    .btn
        background transparent    
        font-size 8px
        padding 4px 10px
        font-style italic
        border solid 1px #D1B03C
        color #D1B03C
        transition 300ms linear
        text-decoration none
        &:hover
            background #D1B03C
            color #fff
    
    .menu-timeline
        display none
        position relative
        font-family sans-serif
        
        .box
            position relative
            width 40px
            height 30px
            float left   
            font-size 10px  
            border-bottom solid 1px #222   
            transition font-size 200ms linear
            &:hover
                color #555
            &:hover .punto
                background #555
            .numero
                display block
                height 20px
                line-height 25px
                cursor pointer

            .punto
                position absolute
                background #222
                width 2px
                height 2px
                bottom -2.5px
                left 50%
                margin-left -2px
                border 1px solid #000
                border-radius 3px
                cursor pointer
                transition 200ms linear
                &:hover
                    background #999

        .box.active
            font-size 15px
            .punto
                width 4px
                height 4px
                bottom -3.5px
                margin-left -3px      

// estilos para el header logo y botones cuando estan en vista detalle
.header-year
    background rgba(209,176,60,0.8)
    position relative
    #logo 
        background url(../img/logo-black.png)
    .btn
        border solid 1px #222
        color #222
        &:hover
            background #222
            color #fff
    .menu-timeline
        display inline-block

@media only screen and (min-width: 768px)
    header
        position fixed   

        .menu-timeline
            .box
                font-size 12px  
                width 50px   
            .box.active
                font-size 20px  

    .header-year      
        position fixed  
        background rgba(209,176,60,0.5)        

        


////////////  HOME  ////////////

#section-home
    position relative
    background url(../img/back_home800.png)
    text-align center 
    min-height 600px
    #img-home
        margin-left auto
        margin-right auto
        margin-top 50px
    #texto-home
        //background transparent    
        margin-top 50px
        #first
            font-size 16px
            font-style italic
            color #D1B03C
            padding 0 10%
        #last
            font-size 13px
            color #fff
            padding 0 15%

    #info-home
        font-size 10px
        font-style italic
        color #D1B03C
        margin-top 30px

@media only screen and (min-width: 768px)
    #section-home
        
        #img-home
            position relative
            margin-top 20px
            max-width 320px
            width 30%
            height auto
        #texto-home
            position absolute
            bottom 10%
            margin 0

        #info-home
            position absolute
            bottom 0
            width 100%

@media only screen and (min-width: 1400px) 
    #section-home
        #img-home
            margin-top 80px
    

////////////  SLIDE  ////////////

#section-timeline
    width 100%
    position relative
    ul#carrusel
        margin 0
        padding 0 
        list-style none
        display block
        height auto
        position relative

        li
            background yellow
            display block
            float left
            height auto
            width 300px
            position relative

            .slide-hover
                    background #000
                    position absolute
                    width 100%
                    height 100%
                    z-index 4
                    opacity 0.7
                    transition opacity 400ms linear
                &:hover .slide-hover
                    opacity 0.3
                &:hover h5
                    opacity 0.9
            
            img
                position relative
                height 100%
                width 100%
                z-index 1
                display block

            h5
                position absolute        
                z-index 5
                bottom 50px
                left 5%
                margin 0
                font-style italic
                font-size 16px
                width 60%
                text-align left
                color #fff
                opacity 0.3
                transition opacity 400ms linear

            h4
                position absolute
                padding 0
                margin 0
                z-index 5
                bottom 50px 
                left 95%
                color #D1B03C
                font-size 40px
                height 40px             
                line-height 40px
                transform rotate(-90deg);
                transform-origin: left bottom 0


@media only screen and (min-width: 768px)
    #section-timeline
        background #666
        ul#carrusel
            height 100%
            li
                height 100%
                h5
                    font-size 28px
                    
                h4
                    font-size 80px
                    height 80px 
                    line-height 80px





////////////  BOTTOM  ////////////

#section-bottom
    position relative
    background url(../img/back_home800.png)
    text-align center
    color #D1B03C
    font-style italic

    h3
        font-size 50px
        
    #texto1
        font-size 18px

    #texto2
        font-size 13px
        font-style normal
        color #fff
        
    #texto1
    #texto2
        padding 0 15%

    #texto3
        font-style italic
        font-size 20px
        color #D1B03C

    #logo-compasion
        width 180px
        height  155px
        background url(../img/logo-compasion.png) no-repeat
        margin 0 auto 50px auto
        
@media only screen and (min-width: 768px)
    #section-bottom
        h3
            font-size 80px
            
        #texto1
            font-size 18px

        #texto2
            font-size 13px

        #texto3
            font-size 32px




////////////  DETALLE  ////////////

#year
    background url(../img/backinterna.jpg)
    #year-top
    #year-bottom
        //background white

        .content-img
            img             
                margin 0 auto 
                width 100%
                height 100% 
            img.visible
                display none
                     
     
        .content-text
            img
                display block
                width 100%
                height auto
                margin-bottom 20px
                border 2px solid #777
                border-radius 10px

            > div 
                text-align center
                padding 0 10%
            h1
                color #D1B03C 
                font-size 3em
            h2
                font-style italic
                font-weight bold
                font-size 30px
                color #191919                
            h3
                color #191919
                font-style italic
                font-size 28px
                font-weight bold      

    #year-slide
        //display block
        //position relative
        //height auto

        ul#carousel
            display block
            list-style none
            margin 0
            padding 0

            li
                display block
                position relative
                padding 0
                margin 0
                float left
                //border 1px solid #000
                list-style none

                img
                    position relative
                    width 100%
                    height auto
                    display block
                    margin 0 
                    padding 0
                    border none

                span
                    position absolute
                    right 0
                    bottom 0
                    left 1px
                    display block
                    background #000
                    opacity 0.7
                    color #fff
                    padding 2px 5px
                    font-size 8px
        
        &:hover #controles
            opacity 0.6

        #controles
            position absolute
            z-index 9
            width 50px
            height 60px
            top 50%
            left 50%
            margin-left -25px
            margin-top -30px
            background #000 
            opacity 0.1
            transition opacity 400ms linear
                                           
            
            a
                display block
                float left
                width 25px
                height 60px
                line-height 60px
                text-align center
                font-size 30px
                text-decoration none
                cursor pointer
                color #999
                transition color 200ms linear

                &:hover
                    color #fff


 

